.card-container {
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
  padding: 20rpx 30rpx;
}

.card-icon {
  width: 200rpx;
  height: 150rpx;
  background: #efeff4;
}

.card-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 30rpx;
}

.card-time {
  color: #999;
  font-size: 24rpx;
  text-align: right;
}

.card-text {
  color: #000;
  font-size: 30rpx;
  text-align: left;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.divider {
  width: 100%;
  height: 1px;
  background: #efeff4;
}
