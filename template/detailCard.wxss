.card-container {
  padding: 0rpx 0rpx 20rpx;
  background: white;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}

.card-img {
  width: 100%;
}

.card-shrink{
  width: 50%;
  
  margin: 10rpx 30rpx 0;
  box-sizing: border-box;
}

.card-desc {
  color: #333;
  width: 100%;
  font-size: 30rpx;
  line-height: 1.2rem;
  padding: 10rpx 30rpx 10rpx;
  box-sizing: border-box;
}

.card-url {
  color: #1296db;
  width: 100%;
  font-size: 26rpx;
  line-height: 1.2rem;
  padding: 10rpx 30rpx 0rpx;
  box-sizing: border-box;
}

.card-author {
  display: flex;
  font-size: 26rpx;
  color: #999;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.card-who:first-child {
  flex: 1;
}

.divider {
  width: 100%;
  height: 1px;
  background: #efeff4;
}
